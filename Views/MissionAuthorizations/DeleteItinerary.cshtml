<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal2">
    Delete Itinerary
</button>

<!-- Modal -->
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Itinerary</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                          @using (Html.BeginForm("DeleteItinerary", "MissionAuthorizations", FormMethod.Post))
                    {
                         @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.ID , "ID", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ID", String.Empty)
                        @Html.ValidationMessageFor(model => model.ID)
                    </div>
                </div>
    <hr />
                <h>Are you sure you want to delete this?</h>
                <div>
                   
                    <hr />
                   


                    
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Delete" class="btn btn-default" />
                        </div>
                    </div>
               
                    
             

              </div> 
                              
                    }
            </div>
            <div class="modal-footer">
                @*<a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <input type="reset" value="Submit" class="btn btn-success" id="btnSubmit" />*@
            </div>
        </div>
    </div>
</div>


