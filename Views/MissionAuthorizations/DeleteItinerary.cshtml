@model WFPtest.Models.MissionItinerary

@{
    Layout = null;
}
<script language="javascript">


    function isPageValid() {
        var validated = Page_ClientValidate('MyValidations');
        if (validated) {
            var mdlPopup = $find('myModal2');
            if (mdlPopup) {
                mdlPopup.show();
                return false;
            }
        }
    }


</script>


