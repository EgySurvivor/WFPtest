@model WFPtest.Models.district 

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>districts</h4>
        <hr />
        @Html.ValidationSummary(true)

        <table class=" table">
            <tr>
                <th>
                    @Html.Label("Name")
                </th>
                <td>
                    @Html.EditorFor(model => model.area_name)
                    @Html.ValidationMessageFor(model => model.area_name)
                </td>

                <th>
                    @Html.Label("Country")
                </th>
                <td>
                    @Html.DropDownList("countryid", String.Empty)
                    @Html.ValidationMessageFor(model => model.countryid)
                </td>

                <th>

                    @Html.Label("governorate")
                </th>
                <td>
                    @Html.DropDownList("governorates_code", String.Empty)
                    @Html.ValidationMessageFor(model => model.governorates_code)
                </td>
            </tr>
        </table>
 <table border="0" align="center">
            <tr>
                <td>
                    <input type="submit" value="Create" class="btn btn-default" />
                </td>
                <td>
                    @Html.ActionLink("Back to List", "Index")
                </td>
            </tr>
        </table>
    </div>
}

