@model WFPtest.Models.contract_type

@{
    ViewBag.Title = "Edit";
}
<br>

<p>
   <h2>Edit Contract Type</h2>
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.contractTypeid)

        <table class=" table">
            <tr>
                <th>
                    @Html.Label("Contract Typ Code")
                </th>
                <td>
                    @Html.EditorFor(model => model.contract_Type_code)
                    @Html.ValidationMessageFor(model => model.contract_Type_code)
                </td>

                <th>
                    @Html.Label("Contract Type Name")
                </th>
                <td>
                    @Html.EditorFor(model => model.contract_type_name)
                    @Html.ValidationMessageFor(model => model.contract_type_name)
                </td>

                <th>
                    @Html.Label("Contract Type Description")
                </th>
                <td>
                    @Html.EditorFor(model => model.contract_type_description)
                    @Html.ValidationMessageFor(model => model.contract_type_description)
                </td>
            </tr>
        </table>

        <table border="0" align="center">
            <tr>
                <td>
                    <input type="submit" value="Save" class="btn btn-default" />
                </td>
                <td>
                    @Html.ActionLink("Back to List", "Index")
                </td>
            </tr>
        </table>
       

    </div>
}


